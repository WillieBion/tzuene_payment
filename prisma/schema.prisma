generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Transactions {
  id            Int       @id @default(autoincrement())
  customerId    String
  msisdn        String
  transactionId String    @unique
  orderId       String
  amount        String
  createdAt     DateTime  @default(now())
  rejectCode    String?
  rejectReason  String?
  status        Status
  tickets       Tickets[]
}

model Tickets {
  eventId       String
  amount        String
  status        TicketStatus
  createdAt     DateTime     @default(now())
  ticketType    String
  transactionId Int
  bookingId     String       @unique
  id            Int          @id @default(autoincrement())
  Transactions  Transactions @relation(fields: [transactionId], references: [id])
}

model EmailSent {
  id        Int      @id @default(autoincrement())
  email     String
  type      String
  status    String
  metadata  Json
  createdAt DateTime @default(now())
}

enum Status {
  ACCEPTED
  REJECTED
  DUPLICATE_IGNORED
}

enum TicketStatus {
  VALID
  INVALID
  EXPIRED
}
